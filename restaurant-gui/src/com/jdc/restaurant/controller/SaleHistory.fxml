<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308"
	maxWidth="1.7976931348623157E308" minHeight="-Infinity"
	minWidth="-Infinity" styleClass="content-view"
	stylesheets="@application.css" xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.jdc.restaurant.controller.SaleHistory">
	<children>
		<HBox styleClass="search-bar">
			<children>
				<DatePicker fx:id="dateFrom" promptText="Date" />
				<DatePicker fx:id="dateTo" layoutX="30.0" layoutY="30.0"
					promptText="Date" />
				<ComboBox fx:id="status" prefWidth="150.0"
					promptText="Status" />
				<TextField fx:id="tableNumber" layoutX="10.0"
					layoutY="10.0" promptText="Table Number" styleClass="wid200" />
				<Button mnemonicParsing="false" onAction="#search"
					text="SEARCH" />
			</children>
		</HBox>
		<TableView fx:id="table" prefHeight="200.0"
			prefWidth="200.0" VBox.vgrow="ALWAYS">
			<columns>
				<TableColumn prefWidth="147.0" text="Sale Date">
					<cellValueFactory>
						<PropertyValueFactory property="saleDateStr" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="210.0" text="Table">
					<cellValueFactory>
						<PropertyValueFactory property="tableNumber" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="234.0" styleClass="center"
					text="Status">
					<cellValueFactory>
						<PropertyValueFactory property="status" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="colSubTotal" prefWidth="154.0"
					styleClass="right" text="Sub Total" />
				<TableColumn fx:id="colTax" prefWidth="234.0"
					styleClass="right" text="Tax" />
				<TableColumn fx:id="colTotal" prefWidth="154.0"
					styleClass="right" text="Total" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</children>
</VBox>
